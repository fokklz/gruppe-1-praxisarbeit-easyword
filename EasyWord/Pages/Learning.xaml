<Page x:Class="EasyWord.Pages.Learning"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:EasyWord.Pages"
      mc:Ignorable="d" 
      Background="White"
      SizeChanged="OnSizeChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ColumnStart" Width="*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition x:Name="ColumnEnd" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock
            Name="Title" Height="26" Margin="10,10,10,10"
            VerticalAlignment="Center" HorizontalAlignment="Left"
            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
            Grid.Column="1" />
        <!-- Import CSV button -->
        <Button
            Name="BtnCsvImport"
            Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Style="{StaticResource MaterialDesignIconButton}"
            ToolTip="MaterialDesignIconButton"
            Grid.Column="2" Click="BtnCsvImport_Click">
            <materialDesign:PackIcon
            Kind="TrayArrowUp" />
        </Button>
        <!-- Output button -->
        <Button
            Name="BtnSettings"
            Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Style="{StaticResource MaterialDesignIconButton}"
            ToolTip="MaterialDesignIconButton"
            Grid.Column="3" Click="BtnSettings_Click">
            <materialDesign:PackIcon
            Kind="Cog" />
        </Button>
        <!-- Textinput card -->
        <materialDesign:Card
            Padding="5"
            Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"
            Background="{DynamicResource PrimaryHueLightBrush}"
            Foreground="{DynamicResource PrimaryHueLightForegroundBrush}" Margin="10,10,10,10" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                
                <!-- Edit Button 
                <Button Name="BtnEdit" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="MaterialDesignIconButton" HorizontalAlignment="Center" VerticalAlignment="Top" Click="BtnSettings_Click" Grid.Column="1"> <materialDesign:PackIcon Kind="Pencil" /></Button>
                -->
                <!-- Word output -->
                <TextBlock
                    Name="WordOutput"
                    Grid.Row="1" Grid.ColumnSpan="2"
                    FontSize="20" TextAlignment="Center" VerticalAlignment="Center" >
                    <Run Language="de-ch" Text="Test"/>
                </TextBlock>
                <!-- Bucket Display -->
                <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Grid.Row="2">
                    <materialDesign:PackIcon Kind="Bucket" Opacity="0.3"/>
                    <materialDesign:PackIcon Name="BucketDisplay2" Kind="Bucket" Opacity="0.3"/>
                    <materialDesign:PackIcon Name="BucketDisplay3" Kind="Bucket" Opacity="0.3"/>
                    <materialDesign:PackIcon Name="BucketDisplay4" Kind="Bucket" Opacity="0.3"/>
                    <materialDesign:PackIcon Name="BucketDisplay5" Kind="Bucket" Opacity="0.3"/>
                    <!-- Wrong output -->
                    <StackPanel Opacity="0.8" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,0,0,0" >
                        <TextBlock
                            Style="{StaticResource MaterialDesignBody2TextBlock}"
                            Text="Falsch: "/>
                        <TextBlock
                            Name="WrongOutput"
                            Style="{StaticResource MaterialDesignBody2TextBlock}"
                            Text="10" />    
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <!-- Word input -->
        <StackPanel Grid.Column="1"  Grid.Row="2" VerticalAlignment="Top" Margin="10, 25, 15, 20">
            <TextBox
                Name="WordInput"
                materialDesign:HintAssist.Hint="Übersetzung"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Validation.ErrorTemplate="{StaticResource CustomErrorTemplate}"
                TextWrapping="Wrap" FontSize="14" KeyDown="WordInput_KeyDown" >
                <TextBox.Text>
                    <Binding Path="WordInputText" UpdateSourceTrigger="Explicit">
                        <Binding.ValidationRules>
                            <local:WordValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <!-- Button Check -->
        <Button 
            Name="SubmitButton" 
            Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"
            Content="Check" 
            HorizontalAlignment="Center" VerticalAlignment="Top"
            Height="42" Width="102" Visibility="Visible" Margin="0,27,10,0" 
            Click="SubmitButton_Click" />
    </Grid>
</Page>
